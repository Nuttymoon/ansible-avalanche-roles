[Unit]
Description=AvalancheGo systemd service
StartLimitIntervalSec=0

[Service]
Type=simple
User={{ avalanchego_user }}
WorkingDirectory={{ avalanchego_install_dir }}
ExecStart={{ avalanchego_install_dir }}/avalanchego-v{{ avalanchego_version }}/avalanchego --config-file={{ avalanchego_conf_dir }}/node.json
Restart=no

[Install]
WantedBy=multi-user.target
